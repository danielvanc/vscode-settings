{
  "git.promptToSaveFilesBeforeCommit": "always",

  "gitlens.keymap": "chorded",

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "twig": "html",
    "less": "less",
    "SCSS": "scss",
    "vue-html": "html",
    "javascript": "javascriptreact"
  },

  "files.associations": {
    "*.html": "html",
    "*.js": "javascriptreact"
  },

  "git.autofetch": true,

  "[html-twig]": {
    "editor.tabSize": 2
  },

  "eslint.alwaysShowStatus": true,

  "carbon.theme": "dracula",

  "window.title": "${rootName}${separator}${activeEditorLong}",
  "php.validate.executablePath": "/usr/bin/php",

  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontFamily": "'Dank Mono',FiraFlott,Inconsolata-g for Powerline",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.copyOnSelection": true,

  "editor.multiCursorModifier": "alt",

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'Dank Mono', 'JetBrains Mono', 'Fira Code', Hack,Hasklig, Inconsolata, monospace",
  "editor.fontSize": 17,
  "editor.fontLigatures": true,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "editor.rulers": [70],

  "workbench.colorTheme": "Glide",
  "workbench.list.openMode": "doubleClick",

  "workbench.colorCustomizations": {
    "statusBar.foreground": "#dedede",
    "terminal.border": "#434976",
    "editorRuler.foreground": "#202433",
    "editorBracketHighlight.foreground1": "#BF616A",
    "editorBracketHighlight.foreground2": "#D08770",
    "editorBracketHighlight.foreground3": "#EBCB8B",
    "editorBracketHighlight.foreground4": "#A3BE8C",
    "editorBracketHighlight.foreground5": "#B48EAD",
    "editorBracketHighlight.foreground6": "#88C0D0",
    "editor.unexpectedBracket.foreground": "#5E81AC"
  },
  "todohighlight.isEnable": true,
  "editor.bracketPairColorization.enabled": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "breadcrumbs.enabled": true,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "terminal.integrated.lineHeight": 0,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.experimentalLinkProvider": false,
  "terminal.external.osxExec": "iTerm2.app",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.enableBell": true,
  "workbench.fontAliasing": "antialiased",
  "debug.console.fontFamily": "'Dank Mono'",
  "debug.console.fontSize": 16,
  "workbench.sideBar.location": "left",
  "projectManager.git.baseFolders": ["/Applications/MAMP/htdocs"],
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "eslint.lintTask.enable": true,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  "editor.cursorSmoothCaretAnimation": true,
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "terminal.integrated.serverSpawn": false,
  // "editor.semanticHighlighting.enabled": false
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.scrollbar.horizontalScrollbarSize": 6,
  "editor.scrollbar.verticalScrollbarSize": 6,
  "editor.scrollbar.horizontal": "hidden",
  "editor.accessibilitySupport": "off",
  "browser-preview.startUrl": "http://localhost:3000",
  "liveServer.settings.useBrowserPreview": true,
  "workbench.iconTheme": "vscode-icons",
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "editor.inlineSuggest.enabled": true,
  "thunder-client.codeSnippetLanguage": "cs-httpclient"
}
